{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "target": "ESNext",
    "types": ["node", "vite/client", "vite-plugin-svgr/client"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
